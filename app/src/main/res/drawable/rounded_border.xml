<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Gradient Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>
            <gradient
                android:type="linear"
                android:startColor= "#FF5722"
                android:centerColor="#FF5722"
                android:endColor="#FF5722"
                android:angle="0" />
        </shape>
    </item>

    <!-- Inner White Background -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- White Inner Part -->
            <corners android:radius="41dp"/> <!-- Slightly smaller for border effect -->
        </shape>
    </item>

</layer-list>
